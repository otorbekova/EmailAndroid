<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Provile_Fragment">


<LinearLayout
    android:id="@+id/fg"
    app:menu="@menu/bottom"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/gradientt"
    >

</LinearLayout>

    <ImageView
        android:id="@+id/profil_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bart"
        android:background="@drawable/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />

    <View
        android:id="@+id/vi"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#101010"
        app:layout_constraintTop_toBottomOf="@+id/profil_image"
        />
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/vi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:id="@+id/value_fam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Aizada "
            android:textColor="#0C0B0C"
            />

    </LinearLayout>

    <View
        android:id="@+id/vi1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#101010"
        app:layout_constraintTop_toBottomOf="@+id/lin"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#0C0B0C"
        app:layout_constraintTop_toBottomOf="@+id/vi1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/vi2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#101010"
        app:layout_constraintTop_toBottomOf="@+id/email" />
</androidx.constraintlayout.widget.ConstraintLayout>